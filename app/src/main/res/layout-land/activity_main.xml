<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/d4_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d4" />

            <ImageButton
                android:id="@+id/d6_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/d4_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d6" />

            <ImageButton
                android:id="@+id/d8_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/d6_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d8" />

            <ImageButton
                android:id="@+id/d10_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/d8_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d10" />

            <ImageButton
                android:id="@+id/d12_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/d10_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d12" />

            <ImageButton
                android:id="@+id/d20_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/d12_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/d20" />

            <SeekBar
                android:id="@+id/rolls_bar"
                android:layout_width="218dp"
                android:layout_height="15dp"
                android:layout_marginTop="30dp"
                android:max="20"
                android:min="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/d6_button" />

            <Button
                android:id="@+id/add_roll_button"
                android:layout_width="95dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:text="@string/add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.926"
                app:layout_constraintStart_toEndOf="@+id/bar_display"
                app:layout_constraintTop_toBottomOf="@+id/d10_button" />

            <Button
                android:id="@+id/use_saved_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:text="@string/use_saved_roll"
                app:layout_constraintEnd_toStartOf="@+id/clear_last_button"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rolls_bar" />

            <Button
                android:id="@+id/clear_all_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/clear_all"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toEndOf="@+id/clear_last_button"
                app:layout_constraintTop_toBottomOf="@+id/rolls_bar" />

            <Button
                android:id="@+id/clear_last_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/clear_last"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rolls_bar" />

            <TextView
                android:id="@+id/main_view"
                android:layout_width="0dp"
                android:layout_height="97dp"
                android:gravity="center"
                android:text="@string/textview"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clear_last_button"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/modifier_view"
                android:layout_width="109dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:text="@string/modifier"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.706"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_view" />

            <EditText
                android:id="@+id/modifier_input"
                android:layout_width="168dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:ems="10"
                android:inputType="numberSigned"
                app:layout_constraintStart_toEndOf="@+id/modifier_view"
                app:layout_constraintTop_toBottomOf="@+id/main_view" />

            <Button
                android:id="@+id/save_roll_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="@string/save_roll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/roll_button"
                app:layout_constraintTop_toBottomOf="@+id/main_view"
                app:layout_constraintVertical_bias="0.16" />

            <Button
                android:id="@+id/roll_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="@string/roll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/details_button"
                app:layout_constraintTop_toBottomOf="@+id/main_view"
                app:layout_constraintVertical_bias="0.16" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/save_roll_button"
                app:layout_constraintHorizontal_bias="0.367"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_view"
                app:layout_constraintVertical_bias="0.16"
                app:srcCompat="@drawable/settings" />

            <Button
                android:id="@+id/details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="@string/details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/modifier_view"
                app:layout_constraintTop_toBottomOf="@+id/main_view"
                app:layout_constraintVertical_bias="0.16" />

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/d20_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/plus" />

            <ImageButton
                android:id="@+id/minus_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/plus_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/minus" />

            <TextView
                android:id="@+id/bar_display"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="26dp"
                android:gravity="center|center_horizontal"
                android:text="20"
                app:layout_constraintStart_toEndOf="@+id/rolls_bar"
                app:layout_constraintTop_toBottomOf="@+id/d8_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>